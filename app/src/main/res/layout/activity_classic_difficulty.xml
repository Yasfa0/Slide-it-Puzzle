<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context=".TimedDifficultyActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/difficulty"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/difficulty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/blankspace"
        ></ImageView>

    <TextView
        android:id="@+id/labelDifficulty"
        android:text="Select Difficulty"
        android:textColor="#ffffff"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@id/difficulty"
        app:layout_constraintRight_toRightOf="@id/difficulty"
        app:layout_constraintLeft_toLeftOf="@id/difficulty"
        android:textSize="25dp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="1"
        app:layout_constraintLeft_toLeftOf="@id/difficulty"
        app:layout_constraintRight_toRightOf="@id/difficulty"
        app:layout_constraintTop_toBottomOf="@id/labelDifficulty"
        app:layout_constraintBottom_toBottomOf="@id/difficulty"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/easy"
            android:src="@drawable/easy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            />


        <ImageView
            android:id="@+id/medium"
            android:src="@drawable/medium"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />


        <ImageView
            android:id="@+id/hard"
            android:src="@drawable/hard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />


        <ImageView
            android:id="@+id/sip"
            android:src="@drawable/sip_locked"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>